<?xml version="1.0" encoding = "windows-1251"?>
<Configuration>
  <WindowManager>
    <Window
      Id        = "ParentWindow"
      Style     = "Overlapped"
      Title     = "Parent window"
      Maximize = "1"
      BackgroundColor = "255 0 0"
    />  
    <Window
      Id       = "ChildWindow"    
      Style    = "PopUp"
      Maximize = "1"
      Title    = "Window1 title"
      Parent   = "ParentWindow"
      BackgroundColor = "0 0 255"
      ChildAspectRatio = "3:4"
    />
  </WindowManager>
  <WindowInputDriver>
    <Device Id="Device1" Window="ChildWindow"/>
  </WindowInputDriver>
  <InputManager TranslationMapRegistry = "data/translation_map_registry.xkeyreg"/>
</Configuration>
