<?xml version="1.0" encoding = "windows-1251"?>
<Configuration>
  <Log>
    <Console Filters="*"/>
    <File FileName="log.txt" Filters="*" Flush="1">
      <OutputFormat 
        Replacement="{log}: {message}" 
        SortOrder="1"
      />
      >
        <Filter Wildcard="*"/>
      </OutputFormat>
    </File>
  </Log>
  <WindowManager>
    <Window
      Id       = "MainWindow"
      Style    = "Overlapped"
      Width    = "1024"
      Height   = "768"
      Title    = "Main window"
      Visible  = "1"
    />  
  </WindowManager>
  <WindowRenderer Id="MyRenderer" AdapterMask="*" DriverMask="*">
    <FrameBuffer
      Window       = "MainWindow"
      ColorBits    = "24"
      AlphaBits    = "0"
      DepthBits    = "24"
      StencilBits  = "8"
      FullScreen   = "0"
      BuffersCount = "2"
      SwapMethod   = "Discard"
      SamplesCount = "1024"
      VSync        = "1"
    />
  </WindowRenderer>
  <SceneRender
    DriverMask      = "*"
    RendererMask    = "MyRenderer"
    Log             = "render.scene_render"
    ResourceManager = "ResourceManager1"
    ResourceMask    = "*xmtl"
    CacheState      = "1"
    >
    <RenderTarget 
      Screen     = "Screen1"
      IdleRender = "1"
      />
  </SceneRender>
  <ScenePlayer 
    Listener        = "Listener1"
    DriverMask      = "*"
    DeviceMask      = "*"
    InitString      = ""
    ResourceManager = "ResourceManager1"
    ResourceMask    = "*snddecl"
    CacheState      = "1"
    /> 
  <WindowInputDriver>
    <Device Id="Device1" Window="MainWindow"/>
  </WindowInputDriver>
  <InputManager TranslationMapRegistry = "data/configurations/input/translation_map_registry.xkeyreg"/>
  <Shell Interpreter="lua" Sources="data/scripts/main.lua" Libraries="*" Execute=""/>
</Configuration>
