<?xml version="1.0" encoding = "Cp1251"?>
<Configuration>
  <Log>
    <Console Filters="*"/>
    <File FileName="log.txt" Filters="*" Flush="1">
      <OutputFormat 
        Filter="*" 
        Replacement="{log}: {message}" 
        SortOrder="1"
      />
    </File>
  </Log>
  <WindowRenderer Id="MyRenderer" AdapterMask="*Open*" DriverMask="*">
    <FrameBuffer
      Window       = "MainWindow"
      ColorBits    = "24"
      AlphaBits    = "0"
      DepthBits    = "24"
      StencilBits  = "8"
      FullScreen   = "0"
      BuffersCount = "2"
      SwapMethod   = "Discard"
      SamplesCount = "1024"
      VSync        = "1"
    />
  </WindowRenderer>
  <SceneRender
    DriverMask      = "*"
    RendererMask    = "MyRenderer"
    Log             = "render.scene_render"
    ResourceManager = "ResourceManager1"
    ResourceMask    = "*xmtl"
    CacheState      = "1"
    >
    <RenderTarget 
      Screen     = "MainScreen"
      IdleRender = "1"
      />
  </SceneRender>
</Configuration>
