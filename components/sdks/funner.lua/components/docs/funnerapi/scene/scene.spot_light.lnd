  Topic: Пример кода
 
  (start code) 
  function test_spot_light ()
    print ("Spot light test")

    local light1 = Scene.SpotLight.Create ()

    print ("Name = " .. light1.Name)
    print ("Angle = " .. light1.Angle)
    print ("Exponent = " .. light1.Exponent)

    light1.Angle = 75
    light1.Exponent = 0.7
    light1.Name = "light1"

    print ("Name = " .. light1.Name)
    print ("Angle = " .. light1.Angle)
    print ("Exponent = " .. light1.Exponent)
  end
  (end code)
*/

