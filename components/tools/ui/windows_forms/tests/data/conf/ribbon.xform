<?xml version="1.0" encoding="Cp1251"?>
<UIConfig>
  <Plugin Name="Ribbon">
    <Ribbon Name="CustomRibbon">
      <Menu Name="FirstMenu" Text="Drop-down menu">
        <Item Text="First item">
          <Item Text="First sub-item"></Item>
          <Separator Text="Splitter"></Separator>
          <Item Text="Second sub-item"></Item>
        </Item>
      </Menu>
      <Menu Name="SecondMenu" Source="FirstMenu">
        <Item Text="Second item"></Item>
      </Menu>
      <List Name="ItemedList">
        <Item Text="First Row"></Item>
        <Item Text="Second Row"></Item>
        <Separator Text="Splitter"></Separator>
        <Item Text="Third Row"></Item>
      </List>
      <Tab Text="Ribbon tab">
        <Panel Text="Button panel" Flow="Vertical">
          <Group>
            <Button Text="Small button" Size="Medium" OnClick ="print ('Button click')"></Button>
            <Menu Source="FirstMenu"></Menu>
          </Group>
          <Separator></Separator>
          <Menu Size="Large" Text="Another drop-down menu" Source="SecondMenu"></Menu>
        </Panel>
        <Panel  Text="Text boxes panel" Flow="Vertical">
          <Group>
            <Editor Width="150" Variable="ApplicationServer.registry2.prop1"></Editor>
            <List Width="100" Text="ComboBox" Variable="ApplicationServer.registry2.prop2" Source="ItemedList"></List>
          </Group>
        </Panel>
      </Tab>
    </Ribbon>
  </Plugin>
</UIConfig>