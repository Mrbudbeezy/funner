<?xml version="1.0" encoding="utf-8"?>
<UIConfig>
  <MenuItem Id="MenuItem1" Text="Ещё один пункт" Tip="Странное название"/>
  <MenuItem Id="MenuItem2" Text="Справка" Tip="Справка о приложении">
    <MenuItem Text="О программе..." Tip="Описание программы" OnClick="Application.Execute ('ShowAbout')"/>
    <MenuItem Source="MenuItem1"/>
    <MenuItem Text="Подменю">
       <MenuItem Text="Подподменю">
         <MenuItem Text="Пункт" Image="data/app.ico"/>
       </MenuItem>
    </MenuItem>
  </MenuItem>
  <MenuStrip Id="MenuStrip1">
    <MenuItem Text="Файл">
      <MenuItem Text="Новая форма" OnClick="Application.CreateForm ('Application', 'my_init_string', DockState.Float)"/>
      <MenuItem Text="Выход" Tip="Выход из приложения" OnClick="Application.Execute ('close')"/>
    </MenuItem>
    <MenuItem Source="MenuItem2"/>
  </MenuStrip>
  <ToolStrip Id="ToolStrip1">
    <ToolButton Image="data/app.ico" OnClick="Application.Execute ('Button1Click')" Tip="Картинка"/>
    <ToolButton Text="Hello world" OnClick="Application.Execute ('Hello world')"/>
  </ToolStrip>
  <Plugin 
    Name="Console" 
    BackgroundColor="0;0;0;255" 
    ForegroundColor="255;255;255;255" 
    HistoryCapacity="64"
    OutputCutThreshold="256" 
    OutputCutTo="196"
  />
  <Plugin Name="PropertyGrid">  <!-- init_string - имя_карты префикс_реестра -->
    <PropertyMaps>
      <PropertyMap Name="Map1">
        <Property Name="IntProperty1" VarName="IntProperty1" Category="Category #1" Title="Property title!" Type="int"/>
        <Property Name="FloatProperty1" VarName="FloatProperty1" Tip="Property tip" ReadOnly="0" Type="float"/>
        <Property Name="DoubleProperty1" VarName="DoubleProperty1" Type="double"/>
        <Property Name="BoolProperty1" VarName="BoolProperty1" Type="bool" ReadOnly="1"/>
        <Property Name="BoolProperty2" VarName="BoolProperty2" Type="bool"/>
      </PropertyMap>

      <PropertyMap Name="Map2" Inherit="Map1">
        <Property Name="Property5" VarName="Property5" Category="Category #2"/>
        <Property Name="DateTimeProperty1" VarName="DateTimeProperty1" Type="System.DateTime"/>
        <Property Name="ColorProperty1" VarName="ColorProperty1" Type="System.Drawing.Color"/>
        <Property Name="StringProperty1" VarName="StringProperty1"/>
      </PropertyMap>  
    </PropertyMaps>
  </Plugin>
</UIConfig>
